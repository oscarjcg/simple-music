<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="albumViewModel"
            type="com.example.simplemusic.viewmodels.ArtistViewModel"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        style="@style/ContainerContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.SearchArtistFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/simple_music_logo"
                tools:layout_editor_absoluteX="156dp"
                tools:layout_editor_absoluteY="13dp" />

        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/backgound"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <LinearLayout
            android:id="@+id/searchContainer"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:padding="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <ImageButton
                android:id="@+id/searchBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/round_corner"
                android:padding="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_search" />

            <EditText
                android:id="@+id/searchEt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/round_input"
                android:hint="@string/search_text"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textCapWords"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <ImageButton
                android:id="@+id/clearBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/round_corner"
                android:padding="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_close" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/artistRv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchContainer">

        </androidx.recyclerview.widget.RecyclerView>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/artistRv"
            app:layout_constraintEnd_toEndOf="@+id/artistRv"
            app:layout_constraintStart_toStartOf="@+id/artistRv"
            app:layout_constraintTop_toTopOf="@+id/artistRv" />

        <TextView
            android:id="@+id/stateTv"
            style="@style/TextAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="State"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="@+id/artistRv"
            app:layout_constraintEnd_toEndOf="@+id/artistRv"
            app:layout_constraintStart_toStartOf="@+id/artistRv"
            app:layout_constraintTop_toTopOf="@+id/artistRv" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
