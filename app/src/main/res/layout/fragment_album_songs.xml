<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.example.simplemusic.viewmodels.SongViewModel"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/ContainerContent"
        tools:context=".fragments.AlbumSongsFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/songRv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:visibility="@{viewModel.loading? View.VISIBLE : View.GONE}"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/songRv"
            app:layout_constraintEnd_toEndOf="@+id/songRv"
            app:layout_constraintStart_toStartOf="@+id/songRv"
            app:layout_constraintBottom_toBottomOf="@+id/songRv" />

        <TextView
            android:id="@+id/stateTv"
            android:visibility="@{viewModel.showStateInfo? View.VISIBLE : View.GONE}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.stateInfo}"
            android:textSize="34sp"
            style="@style/TextAccent"
            app:layout_constraintBottom_toBottomOf="@+id/songRv"
            app:layout_constraintEnd_toEndOf="@+id/songRv"
            app:layout_constraintStart_toStartOf="@+id/songRv"
            app:layout_constraintTop_toTopOf="@+id/songRv" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/playingSongTv"
                style="@style/TextAccent"
                android:visibility="@{viewModel.playingSong? View.VISIBLE : View.GONE}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/round_input"
                android:minWidth="150dp"
                android:padding="4dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="@{viewModel.playingSongName}"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/pauseBtn"
                android:visibility="@{viewModel.playingSong? View.VISIBLE : View.GONE}"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="false"
                android:background="@drawable/round_corner"
                android:cropToPadding="true"
                android:layout_marginEnd="4dp"
                android:padding="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_pause" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
